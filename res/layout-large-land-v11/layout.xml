<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:o2genum="http://schemas.android.com/apk/res/ru.o2genum.howtosay"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/sidebar"
        android:orientation="vertical"
        android:layout_weight="0.25"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:padding="5dp"
        android:background="@color/actionbar_background_start">
        <SearchView
            android:id="@+id/searchview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="0dp">
                <ru.o2genum.howtosay.SidebarItemView
                    android:id="@+id/words_tab"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp"
                    o2genum:icon="@drawable/ic_words"
                    o2genum:text="@string/words"/>
                <ru.o2genum.howtosay.SidebarItemView
                    android:id="@+id/pronunciations_tab"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp"
                    o2genum:icon="@drawable/ic_pronunciations"
                    o2genum:text="@string/pronunciations"/>
                <ru.o2genum.howtosay.SidebarItemView
                    android:id="@+id/about_tab"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="8dp"
                    o2genum:icon="@drawable/ic_about"
                    o2genum:text="@string/about_rate"/>
                <ru.o2genum.howtosay.SidebarItemView
                    android:id="@+id/more_tab"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    o2genum:icon="@drawable/ic_more"
                    o2genum:text="@string/more"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_weight="0.75"
        android:layout_height="fill_parent"
        android:layout_width="0dp">
    </LinearLayout>
</LinearLayout>
